<script>
    function applypass(){
        if(confirm('确定审核通过吗')){
           
            location.href='/admin/applypass?id=<%- rs.id%>';

        }
    }

    function  applyRefuse(){
        $('#applyinfo').hide();
        $('#refuseTable').show();


    }
    function onback(){
        $('#applyinfo').show();
        $('#refuseTable').hide();

    }
    
</script>
<div>
<table id="applyinfo" height='240' align='center'>
<tr>
    <td colspan='2' align="center">
        用户申请数据
    </td>
</tr>

<tr>
    <td align='right'>真名:</td>
    <td>
       <%-rs.realname %>
    </td>
</tr>
<tr>
    <td align='right'>电话：</td>
    <td>
       <%-rs.phone%>
    </td>
</tr><tr>
    <td align='right'>email：</td>
    <td>
       <%-rs.email%>
    </td>
</tr><tr>
    <td align='right'>地址：</td>
    <td>
       <%-rs.address%>
    </td>
</tr>
<tr>
    <td align='right'  >手持身份证照片：</td>
    <td>
       <img src="<%- rs.userphoto%>" style="width: 100px;height: 100px;"/>
    </td>
</tr>
<tr>
    <td align='right'>身份证照片：</td>
    <td>
       <img src="<%- rs.idphoto%>" style="width: 100px;height: 100px;"/>
    </td>
</tr>
<tr>
    <td align='center' colSpan='2'>
        <input type="button" class="btn btn-primary" value='审核通过' onclick='applypass()'/>
    </td>
    <td align='center' colSpan='2'>
        <input type="button" class="btn btn-primary" value='审核驳回'  onclick='applyRefuse()' />
    </td>
</tr>
</table>

<form  id="refuseTable"  name='refuseTable'  method="post" action="./applyRefuse"  style="display: none">
<table  height='240' align='center'  >
    <tr>
        <td>
        驳回理由：<br/>
            <textarea name='message' cols="69"  rows="9"></textarea>
        </td>
    </tr>
    <tr>
        <td  align="center">
            <input type="hidden" name="id"  value="<%-rs.id%>">
            <input type="submit" class="btn btn-primary" value='驳回'/>
             <input type="button" class="btn btn-primary" value='返回' onclick='onback()'/>
        </td>
    </tr>
</table>
</form>